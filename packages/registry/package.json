{
  "name": "@hive/registry",
  "version": "0.0.1",
  "description": "NestJS library template for Hive monorepo",
  "author": "Hive Team",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js",
      "require": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    },
    "./dto": {
      "import": "./dist/dto/index.js",
      "require": "./dist/dto/index.js",
      "types": "./dist/dto/index.d.ts"
    },
    "./interfaces": {
      "import": "./dist/interfaces/index.js",
      "require": "./dist/interfaces/index.js",
      "types": "./dist/interfaces/index.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "copy-assets": "node scripts/copy-assets.js",
    "gen": "node scripts/generate-types.js && pnpm run copy-assets",
    "build": "tsc -b -v",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/mapped-types": "*"
  },
  "peerDependencies": {
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "nestjs-zod": "5.0.0-beta.20250806T023752",
    "@itgorillaz/configify": "^4.0.1",
    "@hive/common": "workspace:*",
    "@hive/utils": "workspace:*",
    "rxjs": "^7.8.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "jest": "^29.7.0",
    "protoc": "^1.1.3",
    "ts-jest": "^29.2.5",
    "ts-proto": "^2.7.7",
    "ts-protoc-gen": "^0.15.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
